{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Categories Classification Input Schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "options": {
      "description": "Options are separated by the '|' delimiter",
      "type": "string",
      "pattern": "^[A-z0-9 |]+$"
    },
    "default_classified": {
      "description": "Categories classified by algorythm and separated by the '|' delimiter",
      "type": "string",
      "pattern": "^[A-z0-9 |]+$"
    },
    "link": {
      "description": "Link to the Document body (.docx or .pdf)",
      "type": "string",
      "format": "uri",
      "pattern": "^(https?|http):\/\/.+[.](pdf|docx)$"
    }
  },
  "required": ["options", "default_classified", "link"]
}
